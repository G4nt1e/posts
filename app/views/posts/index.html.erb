
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">




<p id="notice"><%= notice %></p>

<center>
<h1> 꼬북꺼북! </h1>
<br>
<div class="container">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>제목</th>
          <th>내용</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= link_to '자세히', post %></td>
            <td><%= link_to '수정', edit_post_path(post) %></td>
            <td><%= link_to '삭제', post, method: :delete, data: { confirm: '정말 삭제 할까요?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<br>

<%= link_to '작성하기',new_post_path %>
